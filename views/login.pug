doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Masebook | Login
        link(rel='stylesheet', href='/public/css/normalize.css')
        link(rel='stylesheet', href='/public/css/masebook.css')
    body
        div.padbox
            h1 Masebook
            form#login-form(method="post" action="/login")
                fieldset
                    legend Login
                    .form-item.block
                        label(for="email") Email
                        input#email(type="email" name="email")
                    .form-item.block
                        label(for="password") Password
                        input#password(type="password" name="password")
                    input.form-item(type='submit' value='go')
            script.
                const form = document.getElementById("login-form");

                const submit = function(e) {
                    // get redirect parameter from url bar
                    const params = new URLSearchParams(window.location.search);
                    const redirectURL = params.get('redirect');
                    if (redirectURL) {
                        e.preventDefault();
                        form.action = `${form.action}/?redirect=${redirectURL}`;
                        form.submit();
                    }
                }
                form.addEventListener("submit", submit, false);
