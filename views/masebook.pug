doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        block title
            title Masebook
        link(rel='stylesheet', href='/public/css/normalize.css')
        link(rel='stylesheet', href='/public/css/masebook.css')
        block scripts
    body
        div.grid-container
            header.grid-item#page-header
                h1
                    a(href="/") Masebook 
                p Greetings #{user.name}
            aside.grid-item#sidebar
                ul
                    li Messages [#{user.new_messages}]
                    li Your spaces
                        ul
                            each space in user.spaces
                                li= space
                    li Memberships
                        ul
                            each space in user.member_of
                                li= space
                    li
                        a(href="/directory") Server Directory
            main.grid-item#content
                block content
